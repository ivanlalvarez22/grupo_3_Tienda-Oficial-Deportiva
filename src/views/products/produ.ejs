<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', { title: 'Productos' , stylesheet: ['/css/styles.css','/css/produ.css']}) %>

    <body>
        <!-- Header -->

        <!-- /Header -->

        <!-- todos los productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="tituloEdit">Todos los productos</h2>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <% products.forEach(product=> { %>
                        <section class="product-box">
                            <a href="/products/detail/<%= product.id %>">
                                <figure class="product-box_image">
                                    <img src="/img/products/<%= product.image %>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <h2>$<%= product.price %>
                                    </h2>
                                    <p>
                                        <%= product.description %>
                                    </p>
                                    <p>
                                        <%= product.name %>
                                    </p>
                                    <p>
                                        <%= product.category %>
                                    </p>
                                    <p>
                                        <%= product.colors %>
                                    </p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                        <% }) %>
                </div>

            </div>
        </div>
        <!-- /todos los productos -->

        <!-- footer -->
        <%- include('../partials/footer')%>
            <!-- /footer -->
    </body>

</html>