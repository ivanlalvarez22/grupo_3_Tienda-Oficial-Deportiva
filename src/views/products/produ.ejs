<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('../partials/head', { title: 'producto', stylesheet: ['/css/styles.css','/css/produ.css']}) %>
         	
<body>
        <!-- Header -->
<%- include('../partials/header') %>
        <!-- /Header -->

        <!-- todos los productos -->
        <main class="main">
            <div class="contGeneral">
                <div class="col-12">
                    <h2 class="tituloGeneral"><strong> Todos los productos</strong></h2>
                </div>
                <div class="contProducts">
                    <% products.forEach(product=> { %>
                        <section class="product">
                            <a href="/products/detail/<%= product.id %>">
                                <figure class="product-box_image">
                                    <img src="/img/products/<%= product.image %>" alt="imagen de producto" width="90%">
                                </figure>
                                <article>
                                    <h2>$<%= product.price %>
                                    </h2>
                                    <p>
                                        <%= product.description %>
                                    </p>
                                    <p>
                                        <%= product.name %>
                                    </p>
                                    <p>
                                        <%= product.category %>
                                    </p>
                                    <p>
                                        <%= product.colors %>
                                    </p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                        <% }) %>
                </div>

            </div>
        </div>
        </main>
        <!-- /todos los productos -->

        <!-- footer -->
        <%- include('../partials/footer')%>
            <!-- /footer -->
    </body>

</html>